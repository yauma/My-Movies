<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools" android:id="@+id/card_view_movie"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent" android:layout_height="@dimen/card_view_height"
                                    android:background="@android:color/background_dark">

    <ImageView
        android:id="@+id/imageViewMovie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" android:layout_marginStart="15dp" android:text="TextView"
            android:textColor="@color/cardview_light_background"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>